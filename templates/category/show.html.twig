{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Category</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th style="width: 20%;">Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Category Name</th>
                        <td>{{ category.CategoryName }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                Back to List
            </a>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">
                Edit
            </a>
            <a href="{{ path('annonces_by_category', {'id': category.id}) }}" class="btn btn-warning">
                Announcements by Category
            </a>
        </div>

        <div class="mt-4">
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
