{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}

    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <nav class="navbar navbar-expand-md bg-dark navbar-light">
    <!-- Brand -->
        <a style="color: #EDE9FE" class="navbar-brand" href="#"><h1>Announcement List</h1></a>
    </nav>

    <table class="table table-striped table-bordered">

        <thead class=" table-dark">

        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Images </th>
            <th>Description</th>
            <th>Date</th>
            <th>State</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>


        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.Name }}</td>
                <td>{{ annonce.Images }}</td>
                <td>{{ annonce.Description }}</td>
                <td>{{ annonce.Date ? annonce.Date|date('Y-m-d') : '' }}</td>
                <td>{{ annonce.State }}</td>
                <td>
                    <a type="button" href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="btn btn-primary">show</a>
                    <a type="button" href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class = "btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <center><a type="button"  href="{{ path('app_annonce_new') }}" class="btn  btn-success">Create new</a></center>

{% endblock %}
