{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">

                <h1 class="display-4 mb-4">Annonce</h1>

                <meta name="viewport" content="width=device-width, initial-scale=1">
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
                      rel="stylesheet"
                      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
                      crossorigin="anonymous">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ annonce.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ annonce.Name }}</td>
                    </tr>
                    <tr>
                        <th>Images</th>
                        <td>{{ annonce.Images }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ annonce.Description }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ annonce.Date ? annonce.Date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>State</th>
                        <td>{{ annonce.State }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="{{ path('app_annonce_index') }}" class="btn btn-primary">Back to List</a>
                    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-info">Edit</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
