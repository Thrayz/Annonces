{# templates/annonce/search_results.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add your custom styles for the search results */
        body {
            color: #566787;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
            margin-top: 0;
        }

        .container {
            margin-top: 20px;
        }

        .card-deck {
            margin-bottom: 20px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0,0,0,.1);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        /* ... other styles ... */
    </style>
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Announcements</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_annonce_new') }}">New Announcement</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h1 class="mt-4">Search Results</h1>

        <div class="card-deck">
            {% for annonce in annonces %}
            <div class="card">
                <img src="{{ annonce.Images }}" class="card-img-top" alt="{{ annonce.Name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ annonce.Name }}</h5>
                    <p class="card-text">{{ annonce.Description }}</p>
                    <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="btn btn-primary">View Details</a>
                </div>
            </div>

            {% if loop.index % 3 == 0 %}
        </div><div class="card-deck">
            {% endif %}
            {% endfor %}
        </div>

        {% if annonces is empty %}
            <p class="text-muted">No records found.</p>
        {% endif %}
    </div>
{% endblock %}
